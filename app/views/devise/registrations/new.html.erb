<main class="form-signin w-100 m-auto">
  <%= form_for(resource, as: resource_name,class:"form-floating", url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h1 class="h3 mb-3 fw-normal">Please Sign Up</h1>

      <label for="floatingInput">First Name</label>
      <%= f.text_field :first_name, class:"form-control", id:"floatingInput", placeholder:"first name" %>

      <br>

      <label for="floatingInput">Last Name</label>
      <%= f.text_field :last_name, class:"form-control", id:"floatingInput", placeholder:'last name' %>

      <br>

      <label for="floatingInput">Email address</label>
      <%= f.email_field :email, class:"form-control", id:"floatingInput", placeholder:"email@example.com" %>

      <br>

      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class:"form-control", id:"floatingPassword", placeholder:"Password" %>

      <br>

      <label for='floatingInput'>Password Confirmation</label>
      <%= f.password_field :password_confirmation, class:"form-control", id:"floatingPassword", placeholder:"Password" %>
 
    <%= f.submit "Sign up", class:"btn btn-primary w-100 py-2" %>
  <% end %>
  <%= render "devise/shared/links" %>
</main>


